<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity4">
    <Button
        android:id="@+id/bkiB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="kiB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bMiB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MiB"
        app:layout_constraintStart_toStartOf="@+id/bkiB"
        app:layout_constraintTop_toBottomOf="@+id/bkiB" />

    <Button
        android:id="@+id/bGiB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GiB"
        app:layout_constraintStart_toStartOf="@+id/bMiB"
        app:layout_constraintTop_toBottomOf="@+id/bMiB" />

    <Button
        android:id="@+id/bTiB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TiB"
        app:layout_constraintStart_toStartOf="@+id/bGiB"
        app:layout_constraintTop_toBottomOf="@+id/bGiB" />
</androidx.constraintlayout.widget.ConstraintLayout>