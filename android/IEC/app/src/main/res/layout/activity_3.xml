<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity3">

    <Button
        android:id="@+id/bkB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="kB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bMB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MB"
        app:layout_constraintStart_toStartOf="@+id/bkB"
        app:layout_constraintTop_toBottomOf="@+id/bkB" />

    <Button
        android:id="@+id/bGB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GB"
        app:layout_constraintStart_toStartOf="@+id/bMB"
        app:layout_constraintTop_toBottomOf="@+id/bMB" />

    <Button
        android:id="@+id/bTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TB"
        app:layout_constraintStart_toStartOf="@+id/bGB"
        app:layout_constraintTop_toBottomOf="@+id/bGB" />
</androidx.constraintlayout.widget.ConstraintLayout>